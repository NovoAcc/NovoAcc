<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Global Navigation"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Campaign Global Navigation">
                <items jcr:primaryType="cq:WidgetCollection">
                    <logoflag
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Once checked, Logo link will be activated."
                        fieldLabel="Want Logo as a Link ?"
                        name="./logolink"
                        type="checkbox"
                        xtype="selection"/>
                    <logoLinkPath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Select a page for Logo Link. if not selected and logo link check box is checked then link will be home page."
                        fieldLabel="Logo Link :"
                        name="./logoLinkPath"
                        xtype="pathfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
