<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="M.23.0 - Disclaimer"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            anchor="100%"
            title="General"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <text
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Disclaimer Text will be inherited from a parent page if it exists. Text entered in this dialog will override any text inherited from parent pages."
                    fieldLabel="Disclaimer Text"
                    name="./text"
                    xtype="richtext">
                    <rtePlugins
                            jcr:primaryType="cq:Widget"
                            path="/apps/dupont/phoenix/components/disclaimer/rteplugins.infinity.json"
                            xtype="cqinclude"/>
                </text>
                <francestyle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Add france Style"
                    name="./francestyle"
                    type="checkbox"
                    xtype="selection"
                />
            </items>


        </tab1>
    </items>
</jcr:root>

